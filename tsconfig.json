{
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "ESNext",
        "allowJs": true,
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "strictNullChecks": true,
    }
}